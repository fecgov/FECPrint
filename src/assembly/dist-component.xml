<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>component</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README*</include>
        <include>mapping/**</include>
        <include>resources/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/dist/common</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*</include>
        <include>*/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/dist/component</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*</include>
        <include>*/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/appassembler/bin/fecprint-run.sh</source>
      <outputDirectory>/</outputDirectory>
      <destName>fecprint.sh</destName>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>${project.build.directory}/appassembler/bin/fecprint-paginate.sh</source>
      <outputDirectory>/</outputDirectory>
      <destName>paginate.sh</destName>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </file>

  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>*:mac</exclude>
        <exclude>*:windows</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
